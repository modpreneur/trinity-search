{
  "name": "trinity/search",
  "description": "Trinity Search bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Matejka",
      "email": "matejka@webvalley.cz"
    }
  ],

  "require": {
    "php": ">=7",
    "symfony/framework-bundle": "~2.8 | ~3.0",
    "symfony/symfony": "~3.0",
    "friendsofsymfony/rest-bundle": "~1.7",
    "sensio/framework-extra-bundle": "~3.0",
    "jms/serializer-bundle": "~1.1",
    "doctrine/doctrine-bundle" : "~1",
    "knplabs/doctrine-behaviors": "~1",
    "doctrine/orm": "~2.5",

    "trinity/utils": "dev-master"
  },

  "require-dev": {
    "sensio/generator-bundle": "~3.0",
    "phpunit/phpunit": "5.1.*",
    "mockery/mockery": "~0.9",
    "symfony/var-dumper": "~3.0",
    "fzaninotto/faker": "^1.5",
    "satooshi/php-coveralls" : "1.0.*",
    "doctrine/doctrine-fixtures-bundle" : "~2"
  },

  "autoload": {
    "psr-4": { "Trinity\\Bundle\\SearchBundle\\": "" },
    "exclude-from-classmap": [
      "/Tests/"
    ]
  },

  "minimum-stability": "stable",

  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  }
}
